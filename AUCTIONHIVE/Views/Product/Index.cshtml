@model IEnumerable<AUCTIONHIVE.ViewModels.ProductsModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="content">
    <div class="card card-body">
        <div class="d-flex justify-content-end">
            <a class="btn btn-primary" asp-action="AddEditProduct">Create New</a>
        </div>


        <table class="table table-bordered table-striped" id="">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Sub Category</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>Is Auction</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Price.ToString("C")</td>
                            <td>@item.CategoryName</td>
                            <td>@item.SubCategoryName</td>
                            <td>@item.Location</td>
                            <td>@item.Status</td>

                            <td>@(item.IsAuction ? "Yes" : "No")</td>
                            <td>
                                <a href="@Url.Action("AddEditProduct", "Product", new { id = item.Id })" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                                <button class="btn btn-sm btn-danger delete-product" data-id="@item.Id">
                                    <i class="fa fa-trash"></i>
                                </button>

                            </td>
                        </tr>
                    }
                }
               @*  else
                {
                    <div class="alert alert-info">No products found.</div>
                } *@
            </tbody>

        </table>

    </div>
</div>
@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css" />

    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>


    <script>
        $(document).ready(function () {
            var table = $("#myTable").DataTable();
        });
            
        $(document).ready(function () {
            $('.delete-product').click(function (e) {
                e.preventDefault();

                var button = $(this);
                var productId = button.data('id');

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $.ajax({
                            url: '/Product/Delete',
                            type: 'POST',
                            data: { id: productId },
                            success: function (response) {
                                if (response.success) {
                                    Swal.fire(
                                        'Deleted!',
                                        'Product has been deleted.',
                                        'success'
                                    ).then(() => {
                                        location.reload(); // Or remove the product row dynamically
                                    });
                                } else {
                                    Swal.fire(
                                        'Failed!',
                                        response.message,
                                        'error'
                                    );
                                }
                            },
                            error: function () {
                                Swal.fire(
                                    'Error!',
                                    'Something went wrong.',
                                    'error'
                                );
                            }
                        });
                    }
                });
            });
        });
    </script>

    
}