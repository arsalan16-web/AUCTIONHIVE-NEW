@inject ApplicationDbContext _context;
@{

    var user=_context.Users.FirstOrDefault(x=>x.UserName==User.Identity.Name);
    if (user == null)
    {
        user = new ApplicationUser();
    }
}
@model ScheduledAuction

<section class="pb-9">
    <div class="container-small">
        <nav class="mb-3" aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="#!">Home</a></li>
                <li class="breadcrumb-item"><a href="#!">@Model.Product.Category.Name</a></li>
                <li class="breadcrumb-item"><a href="#!">@Model.Product.SubCategory.Name</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Product.Title</li>
            </ol>
        </nav>
        
        <div class="row justify-content-between">
            <div class="col-lg-7 col-xl-7">
                <form>
                    <div class="d-flex align-items-end">
                        <h3 class="mb-0 me-3">Auction Details</h3>
                    </div>
                    <table class="table table-borderless mt-4">
                        <tbody>
                            <tr>
                                <td class="py-2 ps-0">
                                    <div class="d-flex">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user fs-3 me-2" style="height:16px; width:16px;"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                                        <h5 class="lh-sm me-4">Product</h5>
                                    </div>
                                </td>
                                <td class="py-2 fw-bold lh-sm">:</td>
                                <td class="py-2 px-3">
                                    <h5 class="lh-sm fw-normal text-body-secondary">@Model.Product.Title</h5>
                                </td>
                            </tr>

                            <tr>
                                <td class="py-2 ps-0">
                                    <div class="d-flex">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home fs-3 me-2" style="height:16px; width:16px;"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                                        <h5 class="lh-sm me-4">Address</h5>
                                    </div>
                                </td>
                                <td class="py-2 fw-bold lh-sm">:</td>
                                <td class="py-2 px-3">
                                    <h5 class="lh-lg fw-normal text-body-secondary">@Model.Product.Location</h5>
                                </td>
                            </tr>
                            <tr>
                                <td class="py-2 ps-0">
                                    <div class="d-flex">
                                        <i class="fa-solid fa-tag fs-3 me-2" style="height:16px; width:16px;"></i>
                                        <h5 class="lh-sm me-4">Price</h5>
                                    </div>
                                </td>
                                <td class="py-2 fw-bold lh-sm">:</td>
                                <td class="py-2 px-3">
                                    <h5 class="lh-lg fw-normal text-body-secondary">@Model.Product.Price.ToString("C")</h5>
                                </td>
                            </tr>
                            <tr>
                                <td class="py-2 ps-0">
                                    <div class="d-flex">
                                        <i class="fa-solid fa-tag fs-3 me-2" style="height:16px; width:16px;"></i>
                                        <h5 class="lh-sm me-4">Start Time</h5>
                                    </div>
                                </td>
                                <td class="py-2 fw-bold lh-sm">:</td>
                                <td class="py-2 px-3">
                                    <h5 class="lh-lg fw-normal text-body-secondary">@Model.StartTime</h5>
                                </td>
                            </tr>
                            <tr>
                                <td class="py-2 ps-0">
                                    <div class="d-flex">
                                        <i class="fa-solid fa-tag fs-3 me-2" style="height:16px; width:16px;"></i>
                                        <h5 class="lh-sm me-4">End Time</h5>
                                    </div>
                                </td>
                                <td class="py-2 fw-bold lh-sm">:</td>
                                <td class="py-2 px-3">
                                    <h5 class="lh-lg fw-normal text-body-secondary">@Model.EndTime</h5>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                    <hr class="my-6">
                    <h3>Billing Details</h3>
                    <div class="form-check">
                      
                    </div>
                    <table class="table table-borderless mt-4">
                        <tbody>
                            <tr>
                                <td class="py-2 ps-0">
                                    <div class="d-flex">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user fs-3 me-2" style="height:16px; width:16px;"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
                                        <h5 class="lh-sm me-4">Name</h5>
                                    </div>
                                </td>
                                <td class="py-2 fw-bold lh-sm">:</td>
                                <td class="py-2 px-3">
                                    <h5 class="lh-sm fw-normal text-body-secondary">@user.FirstName @user.LastName</h5>
                                </td>
                            </tr>
                            <tr>
                                <td class="py-2 ps-0">
                                    <div class="d-flex">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-home fs-3 me-2" style="height:16px; width:16px;"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                                        <h5 class="lh-sm me-4">Address</h5>
                                    </div>
                                </td>
                                <td class="py-2 fw-bold lh-sm">:</td>
                                <td class="py-2 px-3">
                                    <h5 class="lh-lg fw-normal text-body-secondary">@user.Address </h5>
                                </td>
                            </tr>
                            <tr>
                                <td class="py-2 ps-0">
                                    <div class="d-flex">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16px" height="16px" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-phone fs-3 me-2" style="height:16px; width:16px;"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path></svg>
                                        <h5 class="lh-sm me-4">Phone</h5>
                                    </div>
                                </td>
                                <td class="py-2 fw-bold lh-sm">:</td>
                                <td class="py-2 px-3">
                                    <h5 class="lh-sm fw-normal text-body-secondary">@user.PhoneNumber</h5>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <hr class="my-6">
                 
                    <div class="row g-2 mb-5 mb-lg-0">
                        <div class="col-md-8 col-lg-9 d-grid"><a asp-action="CreateCheckoutSession" asp-route-auctionId="@Model.Id" class="btn btn-primary">Pay $695.20</a></div>
                    </div>
                </form>
            </div>
  
        </div>
    </div><!-- end of .container-->
</section>