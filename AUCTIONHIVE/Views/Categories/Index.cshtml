@model IEnumerable<AUCTIONHIVE.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="content">
    <div class="card card-body">
        <div class="d-flex justify-content-end">
            <a class="btn btn-primary" asp-action="Create">Create New</a>
        </div>
        
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                       
                        @* <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td> *@
                        <td>
                            <a href="@Url.Action("Edit", "Categories", new { id = item.Id })" class="btn btn-sm btn-warning"><i class="fa fa-edit"></i></a>
                            <a href="@Url.Action("Delete", "Categories", new { id = item.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?');"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

</div>
</div>
