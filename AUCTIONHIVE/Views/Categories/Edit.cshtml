@model AUCTIONHIVE.Models.Category

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="content">
    <div class="card card-body">
        <h3>Update Category</h3>

        <hr />
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <input asp-for="Id" class="form-control" type="hidden" />
                    <input asp-for="CreatedBy" class="form-control" type="hidden" />
                    <input asp-for="CreatedAt" class="form-control" type="hidden" />
                    <input asp-for="UpdatedBy" class="form-control" type="hidden" />
                    <input asp-for="UpdateAt" class="form-control" type="hidden" />

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control">

                        </textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-2">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>

            </div>
        </div>

        <div class="mt-1">
            <a asp-action="Index">Back to List</a>
        </div>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
